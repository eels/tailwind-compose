{
  "extends": "@tailwind-compose/typescript-config/lib/tsconfig.json",

  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "declarationDir": null,
    "noEmit": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@types": ["./types"]
    },
    "typeRoots": ["./types", "../../node_modules/@types"]
  },

  "include": ["./src/**/*", "./types/**/*"]
}
