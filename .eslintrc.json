{
  "extends": [
    "eslint:recommended",
    "standard",
    "semistandard",
    "./packages/config/eslint/compat.json",
    "./packages/config/eslint/import.json",
    "./packages/config/eslint/jest.json",
    "./packages/config/eslint/prettier.json",
    "./packages/config/eslint/react.json",
    "./packages/config/eslint/sort-destructure-keys.json",
    "./packages/config/eslint/sort-imports.json",
    "./packages/config/eslint/sort-keys.json",
    "./packages/config/eslint/testing-library.json",
    "./packages/config/eslint/typescript-sort-keys.json",
    "./packages/config/eslint/typescript.json"
  ],

  "env": {
    "browser": true,
    "es6": true
  },

  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "require-await": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "asyncArrow": "always",
        "named": "never"
      }
    ],
    "quote-props": ["error", "consistent-as-needed"]
  }
}
